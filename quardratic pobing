//hasing using division and linear probing meethod

#include<stdio.h>
int main()
{
    int arr[20],key,hash,size,i,j=0,val;
    printf("\nenter the size of the array\n");
    scanf("%d",&size);
    for(i=0;i<size;i++)
    {
        arr[i]=-1;
    }
    while(1)
    {
    if(j==size)
    {
    break;
    }
    else
    {
        printf("\nenter the key:\n");
        scanf("%d",&key);
        hash=key%size;
        
        if(arr[hash]==-1)
        {
            arr[hash]=key;
            j++;
            for(i=0;i<size;i++)
            {
                printf("%d\n",arr[i]);
            }
        }
        else
        {
            printf("collusion occurs at %d",hash);
            for(i=0;i<size;i++)
            {
               val=((hash)+(i*i))%size;
               if(arr[val]==-1)
               {
                   arr[val]=key;
                   j++;
                   for(i=0;i<size;i++)
                   {
                       printf("%d\n",arr[i]);
                   }
                   break;
               }
               else if(i==size-1)
               {
                   i=-1;
               }
            }
        }
    }
}
}
